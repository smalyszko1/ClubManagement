@model ClubManagement.Models.Event

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Dodaj mecz</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Opponent, "Wybierz przeciwnika", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" float="left">
            @Html.DropDownListFor(x => x.OpponentID, new SelectList(ViewBag.Opponents, "Id", "Name"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Opponent, "", new { @class = "text-danger" })
        </div>
        <input type="button" value="Dodaj nowego przeciwnika" onclick="@("window.location.href='" + @Url.Action("CreateNew", "Opponent") + "'");" />
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Day, "Dzień", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Day, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Day, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Time, "Godzina", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
        </div>
    </div>

    



    <div class="form-group">
        @Html.LabelFor(model => model.Info, "Dodatkowe informacje", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Info, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Info, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Away, "Wyjazd", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.Away, new { htmlAttributes = new { @class = "form-control", @id = "Checkbox" } })
            @Html.ValidationMessageFor(model => model.Away, "", new { @class = "text-danger" })
        </div>
    </div>
   
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Dodaj" class="btn btn-default" />

        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Wróć do listy ", "List")
</div>
