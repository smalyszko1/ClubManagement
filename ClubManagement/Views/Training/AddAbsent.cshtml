@model ClubManagement.Models.Training

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Training</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    
    <div class="form-group">
        @Html.LabelFor(model => model.AbsentPlayers, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            
                @Html.ListBoxFor(x => x.Players, new MultiSelectList(Model.Players, "Id", "Name") , new { @class = "form-control" ,  @name = "list" })
                @Html.ValidationMessageFor(model => model.AbsentPlayers, "", new { @class = "text-danger" })
          
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
